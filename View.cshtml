@model MyGoldStore.Models.UpdateCustomerViewModel
@{
}

<h1>Edit Customer</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="id" readonly>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Ornaments</label>
        <input type="text" class="form-control" asp-for="ornaments">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Weight(in gm)</label>
        <input type="number" class="form-control" asp-for="weight">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Price(in rs)</label>
        <input type="number" class="form-control" asp-for="price">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="phone">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Order Date</label>
        <input type="date" class="form-control" asp-for="orderDate">
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Delivery Date</label>
        <input type="date" class="form-control" asp-for="deliveryDate">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>


    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Customers">Delete</button>

</form>

